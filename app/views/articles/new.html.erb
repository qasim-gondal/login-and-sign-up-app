<h1>Create New Article</h1>

<%=form_with model: @article do |form|%>

<div>
<%=form.label :name%><br>
<%=form.text_field :name%>
<%@article.errors.full_messages_for(:name).each do |message|%>
<div><%=message%></div>
<%end%>
</div>
<div><%=form.label :gender%><br>
<%=form.text_field :gender%>
</div>
<div><%=form.label :user_age%><br>
<%=form.text_field :user_age%>
<%@article.errors.full_messages_for(:user_age).each do |message|%>
<div><%=message%></div>
<%end%>
<div><%=form.label :email%><br>
<%=form.text_field :email%>
<%@article.errors.full_messages_for(:email).each do |message|%>
<div><%=message%></div>
<%end%>
</div><br>
<div>
<div><%=form.label :password%><br>
<%=form.password_field :password%>
</div>
<%@article.errors.full_messages_for(:password).each do |message|%>
<div><%=message%></div>
<%end%><br>
<div><%=form.label :username%><br>
<%=form.text_field :username%>
</div>
<%@article.errors.full_messages_for(:username).each do |message|%>
<div><%=message%></div>
<button>
<%end%>
<%=form.label :image%>
<%=form.file_field :image%>
<%=form.submit%></button>
<%end%>